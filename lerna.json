{
  "lerna": "2.11.0",
  "version": "independent",
  "packages": [
    "packages/*",
    "utils/*",
    "storybook"
  ],
  "command": {
    "version": {
      "allowBranch": ["main", "feat/*", "feature/*", "fix/*"],
      "conventionalCommits": true,
      "ignoreChanges": ["*.spec.ts", "*.md"]
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["*.spec.ts", "*.md"],
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
}
