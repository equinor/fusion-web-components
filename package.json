{
  "name": "@equinor/fusion-web-components",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "install": "lerna bootstrap",
    "start": "npm start --prefix storybook",
    "clean": "lerna clean --yes && del-cli packages/*/package-lock.json && npm run clean:typescript",
    "clean:typescript": "npm run build:typescript -- --clean",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "npm run build:typescript -- --verbose",
    "build:clean": "npm run clean && npm run build",
    "build:typescript": "tsc -b",
    "predocs": "del-cli ./docs && npm run build",
    "docs": "npm run build-storybook --prefix storybook -- --docs --loglevel warn",
    "prepublish": "lerna bootstrap --hoist",
    "prepack": "npm run build",
    "lint": "eslint ./packages/*/src",
    "lint:fix": "npm run lint -- --fix",
    "lint:report": "eslint --output-file eslint-report.log.json --format json packages/*/src",
    "update": "npx lerna-update-wizard",
    "dedupe": "npx lerna-update-wizard --dedupe",
    "update:typescript": "npx lerna-update-wizard --non-interactive --dependency typescript@latest",
    "update:lit": "npm run update:lit-element && npm run update:lit-html",
    "update:lit-element": "npx lerna-update-wizard --non-interactive --dependency lit-element@latest",
    "update:lit-html": "npx lerna-update-wizard --non-interactive --dependency lit-html@latest",
    "test:pack": "lerna exec 'npm pack --dry-run'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lerna": "^3.22.1"
  },
  "devDependencies": {
    "del-cli": "^3.0.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@equinor/eslint-config-fusion": "0.0.3",
    "eslint": "^7.17.0",
    "husky": "^4.3.7",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./packages/*/src": [
      "eslint --quiet --fix"
    ]
  }
}
