{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable"],
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "noEmitHelpers": true,
    "importHelpers": true,
    "composite": true,
  },
  "include": [
    "./packages/*/tsconfig.json",
    "./components/*/tsconfig.json"
  ],
  "exclude": ["node_modules"],
}
