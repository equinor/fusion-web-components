{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable"],
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitHelpers": false,
    "importHelpers": true,
    "composite": true,
    "outDir": "./bin",
    "rootDir": "./src",
  }
}
